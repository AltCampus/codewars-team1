<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Second page</title>

        <!-- stylesheet -->
        <link rel="stylesheet" href="/stylesheets/style.css">

        <!-- icons -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
            integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    </head>

    <body>
        <!-- header starts -->
        <header class="header">

            <!-- logo starts -->
            <div class="logo">
                <a href="/">
                    <img id="logo-img" src="./../public/images/logo.png" alt="code-wars logo">
                </a>
            </div>
            <!-- logo ends -->

            <!-- main navigation starts -->
            <nav class="main-nav">
                <a href="/users/logout" class="">
                    Logout
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </nav>
            <!-- main navigation ends -->
        </header>
        <!-- header ends -->

        <!-- main starts -->
        <main class="main">

            <!-- wrapper starts -->
            <div class="wrapper">

                <!-- heading starts -->
                <h1 class="heading">
                    User <span class="yellow">stats</span> 
                </h1>

                    <table class = "table">
                        <tbody>
                            <tr>
                            <th>Username</th><th>Email</th><th>Honor</th><th>Questions Solved</th>
                            </tr>
                        
                            <% for (var i = 0; i < data.length;  i++) { %>
                            <tr>
                            <td><%= data[i].codewars.username %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].codewars.honor %></td>
                            <td><%= data[i].codewars.codeChallenges.totalCompleted %></td>
                            </tr>    
                            <% } %>
                    <!-- table body ends -->    
                        </tbody>
                    <!-- table ends -->
                     </table>
            <!-- wrapper ends -->
        </main>
        <!-- main ends -->
        <script src="/js/main.js"></script>

    </body>

</html>

